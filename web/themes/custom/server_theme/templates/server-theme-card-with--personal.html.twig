  {{ item }}

  <div class="w-full h-full flex border-t">
    <a href="{{ email.link }}" class="w-1/2 border border-t-0 border-l-0 p-4 text-center">
      <img class="inline-block p-2" src="data:image/png;base64,">
      {{ email.text }}
